{
  "dashboard": {
    "id": null,
    "title": "Telegram Bot Monitoring",
    "tags": ["telegram", "bot", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "telegram_api_success_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "telegram_api_error_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Total API Calls",
        "type": "stat",
        "targets": [
          {
            "expr": "telegram_api_calls_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Total Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "telegram_api_errors_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Error Types Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "telegram_api_4xx_errors_total",
            "refId": "A",
            "legendFormat": "4xx Errors"
          },
          {
            "expr": "telegram_api_5xx_errors_total",
            "refId": "B",
            "legendFormat": "5xx Errors"
          },
          {
            "expr": "telegram_api_network_errors_total",
            "refId": "C",
            "legendFormat": "Network Errors"
          },
          {
            "expr": "telegram_api_timeout_errors_total",
            "refId": "D",
            "legendFormat": "Timeout Errors"
          },
          {
            "expr": "telegram_api_rate_limit_errors_total",
            "refId": "E",
            "legendFormat": "Rate Limit Errors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "API Calls by Method",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (method) (telegram_api_method_calls_total)",
            "refId": "A",
            "legendFormat": "{{ method }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Success vs Error Calls",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(telegram_api_method_calls_total{status=\"success\"})",
            "refId": "A",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(telegram_api_method_calls_total{status=\"error\"})",
            "refId": "B",
            "legendFormat": "Error"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Error Distribution by Code",
        "type": "barchart",
        "targets": [
          {
            "expr": "sum by (code) (telegram_api_error_code_total)",
            "refId": "A",
            "legendFormat": "Code {{ code }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 9,
        "title": "API Health Status",
        "type": "table",
        "targets": [
          {
            "expr": "telegram_api_success_rate",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1
  }
}